<Alloy>
	<Window id="addWin" title="Add Task" tabBarHidden="true">
		<ScrollView id="addWrap" layout="vertical" onClick="blurTextArea">
			<Label>1.いつまでに</Label>
			<Picker id="todoLimit" onChange="setLimitTime"></Picker>
			<Label>2.何を行う</Label>
			<TextArea id="inputTask"></TextArea>
			<Label>3.保存する</Label>
			<Button id="saveTask" title="保存する" onClick="saveTask"></Button>
		</ScrollView>
	</Window>
</Alloy>